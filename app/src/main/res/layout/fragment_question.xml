<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_grey"
    tools:context=".fragments.TestFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/question_unlock"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Seems there are no questions for this topic !"
            android:textColor="@color/red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test_no_question_continue"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/neu_small"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/question_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question_noView"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="1/4"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/question_image"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="12dp"
                android:adjustViewBounds="true"
                android:src="@drawable/maths_sub" />

            <TextView
                android:id="@+id/question_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="48dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/neu_small"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:paddingStart="24dp"
                android:text="TextView.............................................."
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/question_option1_img"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="48dp"
                android:background="@drawable/neu_small"
                android:padding="8dp"
                android:src="@drawable/amine_t_8q" />

            <TextView
                android:id="@+id/question_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neu_small"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:paddingStart="24dp"
                android:text="TextView.............................................."
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/question_option2_img"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neu_small"
                android:padding="8dp"
                android:src="@drawable/amine_t_8q" />

            <TextView
                android:id="@+id/question_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neu_small"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:paddingStart="24dp"
                android:text="TextView.............................................."
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/question_option3_img"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neu_small"
                android:padding="8dp"
                android:src="@drawable/amine_t_8q" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"><![CDATA[

            />

            ]]>

            <TextView
                android:id="@+id/question_right"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="24dp"
                android:background="@drawable/neu_green"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|end"
                android:paddingEnd="8dp"
                android:text="CORRECT"
                android:textColor="@android:color/white"
                android:visibility="gone" />

                <TextView
                    android:id="@+id/question_wrong"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/neu_red"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="8dp"
                    android:text="WRONG"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/question_check"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/neu_small"
                    android:gravity="center"
                    android:text="CHECK"
                    android:textColor="@color/red"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/question_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/dialog_background"
            tools:visibility="gone" />

    </FrameLayout>
</androidx.core.widget.NestedScrollView>